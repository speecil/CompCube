<bg xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='https://monkeymanboy.github.io/BSML-Docs/BSMLSchema.xsd'>
    <vertical anchor-pos-y="-30" pref-height="7.5" vertical-fit="PreferredSize" horizontal-fit="Unconstrained">
        <tab-selector tab-tag="tabSelectorTag" id="tabSelector" select-cell="onCellSelected"/>
    </vertical>

    <macro.for-each hosts="tabItems" pass-back-tags="true">
        <tab tab-name="~tabName" tags="tabSelectorTag" id="tabObject"/>
    </macro.for-each>
</bg>